{
    "manifest_version": 3,
    "name": "Terrain | TerraFlow",
    "version": "3.1.0",
    "description": "Make Terrain events flow",
    "icons": {
        "16": "/images/Icon16.png",
        "48": "/images/Icon48.png",
        "128": "/images/Icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://terrain.scouts.com.au/*"
            ],
            "js": [
                "/scripts/terraflowloader.js"
            ],
            "css": [
                "/styles/terraflow.css",
                "/styles/fluent.min.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
          "resources": ["scripts/terraflow.js"],
          "matches": ["https://terrain.scouts.com.au/*"]
        }
      ],
    "permissions": ["activeTab", "scripting"],
    "content_security_policy": {
        "extension_pages": "default-src 'self'"
      }
}
